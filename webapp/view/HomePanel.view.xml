<mvc:XMLView xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.ui5walkthrough.controller.HomePanel">
  <Panel headerText="{i18n>homePagePanelTitle}" class="sapUiResponsiveMargin" width="auto">
    <content>

      <Button id="helloDialogButton" icon="sap-icon://world" text="{i18n>dialogButtonText}" type="Emphasized" press="onPressDialog" class="sapUiSmallMarginEnd"/>

      <Button text="{i18n>buttonShowMessageToast}" type="Emphasized" press="onPress" class="sapUiSmallMarginEnd"/>
        
      <Input placeholder="{i18n>inputPlaceholder}" width="70%" value="{/introMessage/name}" description="Hello {/introMessage/name}, {/introMessage/category}" valueLiveUpdate="true"/>
    </content>
  </Panel>
</mvc:XMLView>